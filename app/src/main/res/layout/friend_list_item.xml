<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >
<!--以上 LinearLayout layout_height="match_parent"
让ListView的内容覆盖全屏幕android:clickable="true" 让LinearLayout可以添加点击效果 -->
    <LinearLayout
        android:id="@+id/friend_layout"
        android:background="@drawable/friendlayout_selector"
        android:clickable="true"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/portrait_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/default_girl"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="7dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/nickname_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="辛德拉1111111"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/time_tv"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="22:02"
                    android:textSize="12dp"
                    android:textColor="@color/lightgray"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                >

                <TextView
                    android:id="@+id/content_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="早点休息哦"
                    android:textSize="12dp"
                    android:textColor="@color/lightgray"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right">
                    <TextView
                        android:id="@+id/count_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="99+"
                        android:textSize="8dp"
                        android:textColor="@color/white"
                        android:background="@drawable/textview_red"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
